                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/AQ4_choice1"
                        android:textSize="@dimen/textAnswer" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/AQ4_choice2"
                        android:textSize="@dimen/textAnswer" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/AQ4_choice3"
