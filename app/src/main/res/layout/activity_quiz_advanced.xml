                    android:paddingRight="3dp"
                    android:textSize="@dimen/textAnswer"
                    android:textColor="@android:color/black"
                    android:background="@color/reference"
                    android:text="@string/aAnswer4"/>

                <TextView
                    android:id="@+id/aReference4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textAnswer"
                    android:paddingLeft="3dp"
                    android:background="@color/reference"
                    android:text="@string/aReference4"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/card"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/parisagreementsigning" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/advanced_Q5"
                    android:textSize="@dimen/textQuestion" />


                <CheckBox
                    android:id="@+id/ck1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/AQ5_choice1"
                    android:textSize="@dimen/textAnswer" />

                <CheckBox
                    android:id="@+id/ck2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/AQ5_choice2"
                    android:textSize="@dimen/textAnswer" />

                <CheckBox
                    android:id="@+id/ck3A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/AQ5_choice3"
                    android:textSize="@dimen/textAnswer" />

                <CheckBox
                    android:id="@+id/ck4A"
                    android:layout_width="wrap_content"
