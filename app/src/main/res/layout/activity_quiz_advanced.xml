                        android:textSize="@dimen/textAnswer" />

                </RadioGroup>
                <TextView
                    android:id="@+id/aAnswer6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="@dimen/textAnswer"
                    android:textColor="@android:color/black"
                    android:background="@color/reference"
                    android:text="@string/aAnswer6"/>

                <TextView
                    android:id="@+id/aReference6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textAnswer"
                    android:paddingLeft="3dp"
                    android:background="@color/reference"
                    android:text="@string/aReference6"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/card"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/plantinggift" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/beginner_Q9"
                    android:textSize="@dimen/textQuestion" />

                <RadioGroup
                    android:id="@+id/q8RadioA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BQ9_choice1"
                        android:textSize="@dimen/textAnswer" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
